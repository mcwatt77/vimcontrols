<?xml version="1.0" encoding="utf-8" ?>
<ui id="noteViewer">
  <entityList id="noteList" displayName="Note Viewer" rows="[*]{/note}">
    <entityRow columns="[*]">
      <field value="{@descr}"/>
    </entityRow>
  </entityList>
  <entitySelector id="selector" rowSelector="{/dyn::rowSelector}" rows="[:noteList/@rows]">
    <text path="[../@rowSelector]{@body}"/>
  </entitySelector>
</ui>