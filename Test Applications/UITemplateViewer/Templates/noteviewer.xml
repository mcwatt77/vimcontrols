<?xml version="1.0" encoding="utf-8" ?>
<ui id="noteViewer" children="[*]" controller="[:controller]">
  <entityList id="noteList" displayName="Note Viewer" rows="{/note}[entityRow]">
    <entityRow fields="[*]">
      <field value="{@desc}"/>
    </entityRow>
    <entitySelector id="selector" rowSelector="[@rows[1]]" rows="[:noteList/@rows]">
      <entitySelectorController id="controller" selector="[..]"/>
    </entitySelector>
  </entityList>
  <textDisplay value="[:selector/@rowSelector]{@body}"/>
</ui>