<?xml version="1.0" encoding="utf-8" ?>
<ui id="noteViewer" children="[*]" controller="[:controller]">
  <entityList id="noteList" displayName="Note Viewer" rows="[entityRow]{/note}">
    <entityRow columns="[*]">
      <field value="{@descr}"/>
    </entityRow>
    <entitySelector rowSelector="{/dyn::rowSelector}" rows="[:noteList/@rows]">
      <entitySelectorController id="controller" selector="[..]"/>
    </entitySelector>
  </entityList>
  <text value="{/dyn::rowSelector/@body}"/>
</ui>